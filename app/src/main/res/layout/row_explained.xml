<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/cololist"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/repo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Repos name]"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="11pt"
        android:textStyle="bold"
        android:textColor="#0C2DE4"
        />
    <TextView
        android:id="@+id/repo_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[The task is to implement a small ap"
        android:layout_margin="20dp"
        android:textAlignment="inherit"
        android:textSize="8pt"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/repo_avatar"
            android:src="@drawable/ic_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/repo_owner_name"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="[Repos owner namghgffe]"
            android:layout_marginTop="8.5dp"
            android:textSize="8pt"
            android:textColor="@color/black"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">


        <ImageView
            android:id="@+id/mystaar"
            android:src="@drawable/ic_star"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"/>
    <TextView

        android:id="@+id/repo_rating_number"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:text="1.55445k"
        android:layout_marginTop="8dp"
        android:textSize="8pt"
        android:textColor="@color/black"
        />
        </LinearLayout>




    </LinearLayout>


</LinearLayout>